# QuizBoutiqueBot Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED
# ============================================
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ============================================
# OPTIONAL - General Settings
# ============================================
TELEGRAM_CHAT_ID=
QBB_LANGUAGE=en
QBB_PARSE_MODE=HTML

# ============================================
# OPTIONAL - Logging
# ============================================
QBB_LOG_TO_FILE=false
QBB_LOG_LEVEL=INFO

# ============================================
# OPTIONAL - Proxy Settings
# ============================================
QBB_PROXY_ENABLED=false
QBB_PROXY_HOST=
QBB_PROXY_PORT=1080
QBB_PROXY_PROTOCOL=socks
QBB_PROXY_USERNAME=
QBB_PROXY_PASSWORD=

# ============================================
# OPTIONAL - Database
# ============================================
# Database is always enabled, but you can customize the path
# QBB_DB_PATH=data/db/qbb.db
